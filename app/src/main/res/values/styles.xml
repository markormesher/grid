<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:buttonStyle">@style/AppTheme.Button</item>
	</style>

	<style name="large_button_wrapper">
		<item name="android:padding">@dimen/space_small</item>
		<item name="android:gravity">center</item>
		<item name="android:background">?android:selectableItemBackground</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="large_button_icon">
		<item name="android:tint">@color/grey</item>
	</style>

	<style name="large_button_label">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="game_stat_title">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">18sp</item>
		<item name="fontPath">fonts/fantasquesansmono-bold.otf</item>
	</style>

	<style name="game_stat_value">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="pre_game_title">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">36sp</item>
	</style>

	<style name="level_select_title" parent="pre_game_title"/>

	<style name="level_select_stage_text">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="level_select_sub_stage_text">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="overlay_title">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">28sp</item>
	</style>

</resources>
